var commentsIndex = $("#post_<%=post.id%>").find(".comments_index");
var commentsShow = $("#post_<%=post.id%>").find(".comments_show");
var commentForm = $("#post_<%=post.id%>").find("#new_comment");

<% if comment.valid? %>
  commentsIndex.html('<%= escape_javascript(render(PostPresenter.wrap(post).recent_comments)) %>');
  commentsShow.html('<%= escape_javascript(render(PostPresenter.wrap(post).all_comments)) %>');

  commentForm.html('<%= escape_javascript(render("comments/form", comment: post.comments.build)) %>');
<% else %>
  commentForm.html('<%= escape_javascript(render("comments/form")) %>');
<% end %>
